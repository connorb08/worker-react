{
	"exclude": ["**/*.js"],
	"include": ["**/*.d.ts", "**/*.ts", "**/*.tsx"],
	"compilerOptions": {
		"paths": {
			"~/*": ["./*"]
		},
		"target": "ESNext",
		"lib": [
			"es2021",
			"dom"
		],
		"jsx": "react",
		"module": "esnext",
		"moduleResolution": "node",
		"types": [
			"@cloudflare/workers-types",
			"node",
			"react",
		],
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"noEmit": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
