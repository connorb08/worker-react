{
    "name": "cfsite",
    "packageManager": "yarn@3.5.0",
    "type": "module",
    "module": "dist/index.js",
    "main": "dist/index.js",
    "scripts": {
        "build": "yarn build:style && yarn build:worker",
        "build:style": "tailwindcss -o ./public/build/tailwind.css --minify",
        "build:worker": "NODE_ENV=production node scripts/build.js",
        "build:dev": "NODE_ENV=development yarn node scripts/build.js",
        "start": "wrangler dev --port 3000 --env production",
        "dev": "yarn build:dev && concurrently \"yarn:dev:*\"",
        "dev:worker": "wrangler dev --port 3000 --env development",
        "dev:style": "tailwindcss -o ./public/build/tailwind.css --minify --watch",
        "clean": "rm -rf ./dist ./public/build ./public/service-worker.js ./public/root.js",
        "local": "yarn build:dev && concurrently \"yarn:local:*\"",
        "local:wrangler": "wrangler dev dist/index.js --experimental-local --port 3000 --env development",
        "local:style": "tailwindcss -o ./public/build/tailwind.css --minify --watch",
        "deploy": "yarn clean && wrangler publish --env production",
        "deploy:dev": "yarn clean && wrangler publish --env development",
        "lint": "eslint worker/index.ts",
        "format": "prettier --write .",
        "kv:rm:prod": "wrangler kv:namespace list | python3 scripts/delete_namespace.py production",
        "kv:rm:dev": "wrangler kv:namespace list | python3 scripts/delete_namespace.py development"
    },
    "devDependencies": {
        "@cloudflare/kv-asset-handler": "^0.3.0",
        "@cloudflare/workers-types": "^4.20230511.0",
        "@miniflare/tre": "3.0.0-next.13",
        "@types/node": "^20.1.4",
        "@types/react": "^18.2.6",
        "@types/react-dom": "^18.2.4",
        "@types/react-router-dom": "^5.3.3",
        "@types/serviceworker": "^0.0.67",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@typescript-eslint/parser": "^5.59.5",
        "concurrently": "^8.0.1",
        "esbuild": "^0.17.19",
        "eslint": "^8.40.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "latest",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-unused-imports": "^2.0.0",
        "prettier": "^2.8.8",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router": "^6.11.1",
        "react-router-dom": "^6.11.1",
        "tailwindcss": "^3.3.2",
        "typescript": "^5.0.4",
        "wrangler": "^2.20.0"
    }
}
